<body class = "ideas_page">
<div class = "container">
<div>
  <a href= "/bright_idea/<%= @user.id %>"> Bright Idea </a> |
  <a href="/logout">Logout </a>
</div>
<p><a href= "/users/<%= @user.id %>"><%= "#{@idea.user.name}" %></a> says:</p>
<p><%= "#{@idea.content}" %></p>
<hr>
<div>
<h5>People who liked this post</h5>

<table class="table table-condensed">
    <thead>
    <tr>
      <th>Alias </th>
      <th>Email </th>
    </tr>
    </thead>
    <tbody>
    <% @idea.user_liked.uniq.each do |user|%>
        <tr>
          <td><a href="/users/<%= user.id %>"><%= user.name %></a></td>
          <td><%= user.email %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

</div>
</div>
</body>
